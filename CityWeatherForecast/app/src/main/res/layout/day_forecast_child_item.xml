<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/weather_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical|start"
        android:paddingLeft="6dp"
        android:text="@string/test_hour_text"
        android:textAppearance="?android:textAppearanceListItem"/>

    <TextView
        android:id="@+id/icon_and_temperature"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/icon_800"
        android:gravity="center"
        android:text="@string/test_temperature_text"
        android:textAppearance="?android:textAppearanceListItem"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/pressure_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="@string/test_pressure_text"/>

        <TextView
            android:id="@+id/weather_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:text="@string/test_date_text"/>

    </LinearLayout>


</LinearLayout>